<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/carIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage"/>

    <TextView
        android:id="@+id/carnameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Maruti Suzuki Swift"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/cardescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Sedan  - 4 Seats | 4 Doors | 0 bag "
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewdet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="viewdetails"
            android:layout_gravity="center"
            android:text="View Details"
            android:background="@drawable/box_full_round_corner1"
            android:textColor="#337ab7"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cancelplcy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:onClick="cancelpolcy"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Cancellation Policy"
            android:background="@drawable/box_full_round_corner1"
            android:textColor="@android:color/holo_red_light"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/box_grey_fill_nopad"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Pickup Date"/>

            <TextView
                android:id="@+id/pickdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="13 Dec 2017"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/box_grey_fill_nopad"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Pickup Time"/>

            <TextView
                android:id="@+id/picktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="00 : 00 AM"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>