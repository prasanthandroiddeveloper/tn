<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recycler_user_orders"/>

    <LinearLayout
        android:id="@+id/fabLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/box_full_round_corner"
            android:text="@string/all_bookings"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/allfab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="#919191"
            app:srcCompat="@android:drawable/ic_menu_edit"  />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/box_full_round_corner"
            android:text="@string/tour_bookings"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/tourfab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="#919191"
            app:srcCompat="@android:drawable/ic_menu_edit"  />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/box_full_round_corner"
            android:text="@string/car_bookings"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/carfab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="#919191"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/box_full_round_corner"
            android:text="@string/hotel_bookings"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/hotelfab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="#919191"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:backgroundTint="#e7e7e7"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/more"/>

</FrameLayout>
