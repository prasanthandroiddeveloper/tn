<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginTop="0dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="7dp"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relativeLayout3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/himageiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hotels2"
                android:layout_marginTop="5dp"
                tools:ignore="ContentDescription"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_shape"/>

            <TextView
                android:id="@+id/hnameTv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Hotel Raj Park"
                android:layout_margin="5dp"
                android:layout_gravity="bottom"/>



        </FrameLayout>
        <TextView
            android:id="@+id/pnameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Irctc One Day Package" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start|center"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:id="@+id/imagellout">




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tpriceTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#9c9a9c"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:text="₹10000" />

            <TextView
                android:id="@+id/discpTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="₹100" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:paddingStart="10dp"
                android:gravity="start|center"
                android:layout_height="match_parent"
                android:text="@string/per_room_per_night"
                android:textSize="18sp"
                android:paddingLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>