        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#dedede"
            android:textStyle="bold"
            android:text="@string/booking_details"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/name"/>

                <TextView
                    android:id="@+id/Gnametv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/phone_no"/>

                <TextView
                    android:id="@+id/phonetv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/email"/>

                <TextView
                    android:id="@+id/emailtv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/pickup_city"/>

                <TextView
                    android:id="@+id/pickuplocTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/pickup_date"/>

                <TextView
                    android:id="@+id/pickupdateTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/pickup_time"/>

                <TextView
                    android:id="@+id/pickuptimeTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/total_price"/>

                <TextView
                    android:id="@+id/pricetv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:text="@string/app_name"
                android:textIsSelectable="true"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textIsSelectable="true"
                android:layout_marginBottom="15dp"
                android:text="@string/trip_address"
                android:textColor="#919191"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
