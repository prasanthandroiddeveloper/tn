<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:id="@+id/mainlay"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="#ededed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Choose City"/>

    <AutoCompleteTextView
        android:id="@+id/CityATV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn4"
        android:gravity="center"
        android:textColorHint="#9c9a9c"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:drawableStart="@drawable/plac"
        android:hint="Select City" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Pre Booking of cars "
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#4A90E2"
        android:background="#F4FAFF"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fffdff"
                    android:orientation="vertical">


                    <AutoCompleteTextView
                        android:id="@+id/PickATV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/lineborder2"
                        android:gravity="center|start"
                        android:textColorHint="#9c9a9c"
                        android:textColor="@color/black"
                        android:hint="Pick Up At" />

                    <AutoCompleteTextView
                        android:id="@+id/DropATV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/lineborder2"
                        android:gravity="center|start"
                        android:textColorHint="#9c9a9c"
                        android:textColor="@color/black"
                        android:hint="Drop At" />



                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9c9a9c"/>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="PickUp Date"
                android:background="@drawable/whiteborder"
                android:drawableStart="@drawable/ccal"
                android:paddingStart="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <android.support.v4.widget.Space
               android:layout_width="2dp"
               android:layout_height="match_parent" />

            <TextView
                android:id="@+id/TimeTV"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="PickUp Time"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/cclk"
                android:background="@drawable/whiteborder"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:gravity="center"/>

            </LinearLayout>

       <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                    </LinearLayout>

    </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/curve"
            android:src="@drawable/cornershape1"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|center"
            android:contentDescription="@string/none"/>

        <Button
            android:id="@+id/submitbutton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:background="@drawable/rbtn"
            android:text="SEARCH"
            android:textSize="18sp"
            android:textColor="#f2ffee71"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#ededed"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="50dp"
            android:drawableStart="@drawable/clock"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingStart="50dp"
            android:drawableStart="@drawable/driver"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="50dp"
            android:drawableStart="@drawable/cab" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:text="No Waiting in queue"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:text="Driver meet and greet"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:text="High Quality cabs"/>


    </LinearLayout>


</LinearLayout>

</LinearLayout>