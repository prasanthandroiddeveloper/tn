<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/whiteborder">

    <RelativeLayout
            android:id="@+id/llout"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/roomminus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/linearLayout3"
                android:layout_toStartOf="@+id/linearLayout3"
                android:gravity="end|center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/minus_symbol" />

            <TextView
                android:id="@+id/roomplus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/linearLayout3"
                android:layout_toEndOf="@+id/linearLayout3"
                android:gravity="start|center"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginBottom="1.5dp"
                android:text="@string/plus_symbol"/>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/rooms"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/roomcout"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="30sp" />

            </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adultminus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="end|center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                android:text="@string/minus_symbol"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/adults"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/adultcout"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/above_10_years"
                    android:textColor="#a7a7a7" />

            </LinearLayout>

            <TextView
                android:id="@+id/adultplus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:gravity="start|center"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:text="@string/plus_symbol" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/childminus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="end|center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                android:text="@string/minus_symbol" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/childs"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/childcout"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/below_10_years"
                    android:gravity="center"
                    android:textColor="#a7a7a7" />

            </LinearLayout>

            <TextView
                android:id="@+id/childplus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="start|center"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:text="@string/plus_symbol" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/done"
        android:textColor="#fff"
        android:textSize="22sp" />

</LinearLayout>
