    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/addonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Add Ons"
            android:padding="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="#FEEBEA"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#c9c9c9"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>

<HorizontalScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/addon"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>
</HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Aptdc One Day Darshan Package"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:background="#faebe3"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="#c9c9c9"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:text="Slot Time: 10.00 AM" />

                <TextView
                    android:id="@+id/darshandtTv"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="5dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Passenger Details"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:background="#dcf5f1"
                    android:textStyle="bold"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="#c9c9c9"/>

                <LinearLayout
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/PassemlTv"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1.5"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:background="@drawable/lines"
                        android:text="tripnetrasingh@gmail.com"
                        android:layout_marginStart="5dp"/>

                    <TextView
                        android:id="@+id/PassmblTv"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:text="9999999999"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:background="@drawable/lines"
                        android:layout_marginStart="5dp"/>


                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>