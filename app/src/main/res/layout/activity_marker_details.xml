<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context="com.tripnetra.tripnetra.places.Marker_Details_Act">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#f4f4f4"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/placeimageIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noimage"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/placeimage"/>

            <TextView
                android:id="@+id/DescpTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/timings"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/TimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/eventid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#c70000"
                android:text="@string/events"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/newim"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#a9a9a9"
                    android:id="@+id/eventrecycler"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#558de6"

        android:textColor="#fff"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:onClick="bookaccomdation"
        android:text="@string/book_accomodation"/>

</FrameLayout>
