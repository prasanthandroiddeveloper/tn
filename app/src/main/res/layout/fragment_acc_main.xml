<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58e1f5fe">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/llout"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="@string/my_account"
        android:textSize="21sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <FrameLayout
        android:id="@id/llout4"
        android:layout_below="@id/llout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#4fc3f7">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gimagetv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:src="@drawable/edit_profile1" />

        <TextView
            android:id="@+id/Gnametv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="top|center"
            android:gravity="center" />

        <TextView
            android:id="@+id/balTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="top|center"
            android:gravity="center"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/curve"
        android:layout_below="@id/llout4"
        android:layout_marginTop="-20dp"
        android:src="@drawable/cornershape"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:contentDescription="@string/none"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/curve"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/llout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/states">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:contentDescription="@string/my_profile"
                android:src="@drawable/human1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="@string/my_profile"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="end|center"
                android:layout_marginEnd="30dp"
                android:src="@drawable/rightarrow"
                android:contentDescription="@string/none"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/llout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/states">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:contentDescription="@string/refer_and_earn"
                android:src="@drawable/refer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="@string/refer_and_earn"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="end|center"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/none"
                android:src="@drawable/rightarrow" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/llout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/states">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:contentDescription="@string/my_bookings"
                android:src="@drawable/orders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="@string/my_bookings"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="end|center"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/name"
                android:src="@drawable/rightarrow" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
