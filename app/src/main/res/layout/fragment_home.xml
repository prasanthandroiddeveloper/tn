<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f5f7">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/load1"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textColor="#e2000000"
            android:textSize="20sp"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginBottom="5dp"
        android:stretchColumns="*"
        android:alpha="0.9">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="70dp">

            <LinearLayout
                android:id="@+id/llout1"
                android:layout_width="0dp"
                android:layout_span="3"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:background="@drawable/backg">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="-5dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.17"
                    android:src="@drawable/bedwhite"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/hotels"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llout2"
                android:layout_width="0dp"
                android:layout_span="3"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:background="@drawable/backg2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginEnd="5dp"
                    android:alpha="0.17"
                    android:layout_marginBottom="-9dp"
                    android:src="@drawable/toour"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/tours"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </TableRow>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"/>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="70dp">

            <LinearLayout
                android:id="@+id/llout3"
                android:layout_width="0dp"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:background="@drawable/backg1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.4"
                    android:src="@drawable/caar"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="@string/cars" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llout4"
                android:layout_width="0dp"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:background="@drawable/backg3">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.4"
                    android:src="@drawable/place"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="@string/places"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llout5"
                android:layout_width="0dp"
                android:layout_span="2"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:background="@drawable/backg4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.4"
                    android:src="@drawable/pray"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="@string/darshan" />

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f5f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="#f1f5f7">

            <TextView
                android:id="@+id/recommand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="@string/loading"
                android:gravity="center|start"
                android:textColor="#111"
                android:textSize="16sp" />

            <Button
                android:id="@+id/seeMore"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="@string/see_more"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:overScrollMode="never"
            android:layout_marginTop="60dp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/nonettv"
            android:padding="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/nonetwork"
            android:background="#e0e0e0"
            android:visibility="gone"
            android:text="@string/unfortunately_we_can_t_connect"
            android:gravity="center|top"/>

    </FrameLayout>

</LinearLayout>

