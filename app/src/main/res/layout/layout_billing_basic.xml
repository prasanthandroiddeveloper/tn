<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fnameTil"
            android:layout_width="0dp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">

            <EditText
                android:id="@+id/fnameEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/f_name"
                android:drawableStart="@drawable/avatar1"
                android:drawablePadding="5dp"
                android:inputType="text"
                android:maxLength="20"
                android:background="@drawable/box_grey_bottom"
                android:textColor="#000"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lnameTil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/lnameEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:hint="@string/l_name"
                android:background="@drawable/box_grey_bottom"
                android:inputType="text"
                android:maxLength="20"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emaiTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/email"
            android:background="@drawable/box_grey_bottom"
            android:drawableStart="@drawable/tmail"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="17sp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phoneTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:digits="0123456789"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:drawableStart="@drawable/tcall"
            android:drawablePadding="0dp"
            android:background="@drawable/box_grey_bottom"
            android:maxLength="10"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="17sp"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>