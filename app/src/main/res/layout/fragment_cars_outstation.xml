<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:id="@+id/mainlay"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="#dfdfdf"
    tools:context=".cars.fragments.Cars_OutStation_Frag">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="@string/one_way"
        android:gravity="start|center_vertical"
        android:background="#fff"
        android:layout_margin="2dp"
        android:drawableStart="@drawable/way"
        android:paddingStart="10dp"
        android:drawablePadding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/includes_one_pick_up"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#4A90E2"
        android:background="#F4FAFF"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fffdff"
                    android:orientation="vertical">


                    <AutoCompleteTextView
                        android:id="@+id/PickATV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:gravity="center|start"
                        android:textColorHint="#9c9a9c"
                        android:textColor="@color/black"
                        android:hint="@string/pick_up"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="-5dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="10dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#b6b6b6"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/updwn"
                            android:contentDescription="@string/icon"/>

                    </LinearLayout>

                    <AutoCompleteTextView
                        android:id="@+id/DropATV"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/lineborder2"
                        android:gravity="center|start"
                        android:textColorHint="#9c9a9c"
                        android:textColor="@color/black"
                        android:hint="@string/drop" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#9c9a9c"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="@string/pickup_date"
                            android:background="@drawable/whiteborder"
                            android:drawableStart="@drawable/ccal"
                            android:paddingStart="10dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <android.support.v4.widget.Space
                            android:layout_width="2dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/TimeTV"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:text="@string/pickup_time"
                            android:paddingStart="10dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/cclk"
                            android:background="@drawable/whiteborder"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/curve"
            android:src="@drawable/cornershape1"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|center"
            android:contentDescription="@string/none"/>

        <Button
            android:id="@+id/submitbutton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:background="@drawable/rbtn"
            android:text="@string/search"
            android:textSize="18sp"
            android:textColor="#f2ffee71"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="#ededed"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="40dp"
            android:drawableStart="@drawable/low"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingStart="50dp"
            android:drawableStart="@drawable/driver"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="45dp"
            android:drawableStart="@drawable/plac" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:text="@string/lowest_price"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:text="@string/highly_rated_cabs"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:text="@string/many_locations"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>