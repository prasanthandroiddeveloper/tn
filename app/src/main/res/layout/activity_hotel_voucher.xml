<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e8e8"
        android:orientation="vertical">

        <include layout="@layout/voucher_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#dedede"
            android:layout_margin="5dp"
            android:textColor="#F36D21"
            android:textSize="21sp"
            android:text="@string/hotel_details" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="130dp"
                android:layout_margin="15dp"
                android:baselineAligned="false"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/boxfill_grey"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:text="@string/hotel_name"/>

                    <TextView
                        android:id="@+id/hotelname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:background="@drawable/box_top"
                        android:textColor="#000"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/boxfill_grey"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:text="@string/hotel_address" />

                    <TextView
                        android:id="@+id/hoteladdr"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:background="@drawable/box_top"
                        android:textColor="#000"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/boxfill_grey"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:text="@string/phone_number"/>

                    <TextView
                        android:id="@+id/hotelmob"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:background="@drawable/box_top"
                        android:textColor="#000"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/boxfill_grey"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:text="@string/postal_code" />

                    <TextView
                        android:id="@+id/postcode"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:background="@drawable/box_top"
                        android:textColor="#000"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#dedede"
            android:layout_margin="5dp"
            android:textColor="#F36D21"
            android:textSize="21sp"
            android:text="@string/booking_details" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/phone_no" />

                <TextView
                    android:id="@+id/mobiletv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/emailtv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/room_type" />

                <TextView
                    android:id="@+id/roomtype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/check_in_date" />

                <TextView
                    android:id="@+id/cindate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/check_in_time" />

                <TextView
                    android:id="@+id/cintime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/check_out_date" />

                <TextView
                    android:id="@+id/coutdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/no_of_rooms" />

                <TextView
                    android:id="@+id/roomstv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/no_of_guests" />

                <TextView
                    android:id="@+id/gueststv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/no_of_nights"/>

                <TextView
                    android:id="@+id/nightstv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/no_of_extra_beds" />

                <TextView
                    android:id="@+id/ebedstv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boxfill_grey"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:textSize="17sp"
                    android:text="@string/price"/>

                <TextView
                    android:id="@+id/pricetv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/box_top"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:text="@string/app_name"
                android:textIsSelectable="true"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textIsSelectable="true"
                android:layout_marginBottom="15dp"
                android:text="@string/trip_address"
                android:textColor="#919191"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
